{
  "name": "@dxtr.dev/casex",
  "type": "module",
  "version": "3.0.0",
  "description": "All in one, self expressive function for string case styles",
  "main": "dist/casex.js",
  "types": "dist/casex.d.ts",
  "homepage": "https://dxtr.dev/casex",
  "repository": "https://github.com/dxtr-dot-dev/casex",
  "author": "DXTR.DEV <code@dxtr.dev>",
  "license": "MIT",
  "keywords": [
    "casex",
    "case",
    "convert",
    "string",
    "text",
    "string styles",
    "case styles",
    "case style pattern",
    "separator"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --entry.casex src/casex.ts --dts --format esm",
    "build:watch": "yarn build:tsup --watch",
    "typecheck": "tsc --noEmit src/casex.ts",
    "format": "rome format src --write",
    "lint": "rome check src",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "test:coverage": "yarn test --coverage",
    "postversion": "git push && git push --tags",
    "ci:check": "yarn check",
    "ci:test": "yarn build && yarn test:coverage",
    "preversion": "yarn test && yarn lint",
    "version": "yarn build && git add package.json"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "jest": "^29.3.1",
    "rome": "^11.0.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  }
}
